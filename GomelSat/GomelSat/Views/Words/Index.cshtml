
@{
    ViewBag.Title = "Index";
}

<div class="panel panel-primary settings-panel">
    <div class="panel-heading">
        <h3 class="panel-title">Word settings</h3>
    </div>
    <div class="settings-content">
        <div class="text-center">
            <h4 class="alert-info alert">
                Please, write the word you want to add to exception list <br />
            </h4>
        </div>
        @using (Html.BeginForm("AddWord", "Words", new { }, FormMethod.Post, new { }))
        {
            <div class="input-group-lg word-text-input-wrapper">
                <h4 class="text-left text-info">Word:</h4>
                <input type="text" name="word" id="word" class="form-control word-input">
            </div>

            <div>
                <input type="submit" class="btn btn-primary pull-left settings-action-button" value="Add word">
            </div>
        }

        <div class="modal-end-line">
            Text
        </div>

        @using (Html.BeginForm("RemoveWords", "Words", new { }, FormMethod.Post, new { }))
        {
            <div class="word-list-row">
                @foreach (var nextWord in Model.Words)
                {
                    <div class="form-control word-list-inside-row">
                        <input id="@nextWord" name="words" type="checkbox" value="@nextWord"> @nextWord
                    </div>
                }
            </div>

            <div>
                <input type="submit" class="btn btn-primary pull-left settings-action-button" value="Remove words" />
            </div>
        }

        <div class="modal-end-line">
            Text
        </div>

        <div class="text-center">
            <h4 class="alert-info alert">
                If you want to download list of words, please, click here: <br />
            </h4>
        </div>
        <div>
            <a href='@Url.Action("DownloadWords", "Words", new { })' class="btn btn-primary pull-left settings-action-button"> Download list of words </a>
        </div>

        <div class="modal-end-line">
            Text
        </div>

    </div>
</div>

