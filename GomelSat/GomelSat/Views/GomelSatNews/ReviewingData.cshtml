@{
    ViewBag.Title = "ReviewingData";
}

@model Services.GomelSat.Models.ReviewingDataViewModel

@section scripts
{
    <script type="text/javascript">

        var titleExists = '@Model.TitleExists' === 'True';
        var imageLinkExists = '@Model.ImageExists' === 'True';
        var sourceLinkExists = '@Model.LinkExists' === 'True';

        function RemoveAnnoyingWords(id) {
            setTimeout(function () {

                var oldValue = $('#' + id).val();
                var newValue = oldValue.replace(/Взято с http:\/\/www.telesat-news.net.*Спутниковые и Транспондерные ТелеНовости$/, "");
                $('#' + id).val(newValue);

            }, 100);
        }

        function ShowModals() {
            if (!titleExists) {
                $("#headerModalButton").click();
                return;
            }

            if (!imageLinkExists) {
                $("#imageModalButton").click();
                return;
            }

            if (!sourceLinkExists) {
                $("#sourceLinkModalButton").click();
                return;
            }
        }

        ShowModals();
    </script>
}


<button id="headerModalButton" type="button" data-toggle="modal" data-target="#headerModal" hidden>Open Modal</button>

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="headerModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header dialog-box-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Information</h4>
                </div>

                <div class="modal-body dialog-box-content">
                    <div class="text-center">
                        <h4 class="alert-info alert">
                            Please, enter <b>headline of the article</b> before starting of review.
                        </h4>
                    </div>

                    <div class="form-group">
                        @using (Html.BeginForm("InsertHeaderToAnalizingText", "GomelSatNews", new {Id = @Model.Id}, FormMethod.Post, new {}))
                        {
                            <input type="text" id="newsHeader" name="newsHeader" class="dialog-input" onpaste="RemoveAnnoyingWords('newsHeader')"/>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Enter</button>
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<button id="imageModalButton" type="button" data-toggle="modal" data-target="#imageModal" hidden>Open Modal</button>

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="imageModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header dialog-box-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Information</h4>
                </div>

                <div class="modal-body dialog-box-content">
                    <div class="text-center">
                        <h4 class="alert-info alert">
                            Please, enter <b>image link</b> (formatted or not) here before starting of review. <br/>
                            You can upload image <b><a href="http://img-host.org.ua/" target="_blank">here</a></b>
                        </h4>
                    </div>

                    <div class="form-group">
                        @using (Html.BeginForm("InsertImageLinkToAnalizingText", "GomelSatNews", new {Id = @Model.Id}, FormMethod.Post, new {}))
                        {
                            <input type="text" id="imageLink" name="imageLink" class="dialog-input"/>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Enter</button>
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<button id="sourceLinkModalButton" type="button" data-toggle="modal" data-target="#sourceLinkModal" hidden>Open Modal</button>

<div class="container">
    <!-- Modal -->
    <div class="modal fade" id="sourceLinkModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content ">
                <div class="modal-header dialog-box-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Information</h4>
                </div>

                <div class="modal-body dialog-box-content">
                    <div class="text-center">
                        <h4 class="alert-info alert">
                            Please, enter <b>source link</b> (formatted or not) here before starting of review.
                        </h4>
                    </div>

                    <div class="form-group">
                        @using (Html.BeginForm("InsertSourceLinkToAnalizingText", "GomelSatNews", new { Id = @Model.Id }, FormMethod.Post, new { }))
                        {
                            <input type="text" id="sourceLink" name="sourceLink" class="dialog-input" />

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">Enter</button>
                            </div>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<div>
    @using (Html.BeginForm("OpenGomelSatNewsRedactor", "GomelSatNews", new {Id = @Model.Id}, FormMethod.Post, new {}))
    {
        <h3 class="news-text-header">Headline</h3>
        <input type="text" value="@Model.Title" class="header-text" name="header"/>

        <h3 class="news-text-header">Short Text</h3>
        <textarea class="shot-text-area" name="shortText">@Model.ShortText</textarea>

        <h3 class="news-text-header">Text</h3>
        <textarea class="long-text-area" name="text">@Model.Text</textarea>

        <br/>
        <br/>
        
        <div>
            <button type="submit" href="@Url.Action("OpenGomelSatNewsRedactor", "GomelSatNews", new {id = @Model.Id})" class="btn btn-primary">Add new article</button>
        </div>
    }

</div>